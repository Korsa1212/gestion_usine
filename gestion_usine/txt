styles css 
/* Base Styles */
:root {
    --primary: #6C63FF;
    --secondary: #F5F7FA;
    --text-primary: #2D3748;
    --text-secondary: #718096;
    --transition: all 0.3s ease;
    --navbar-height: 70px;
}

body {
    font-family: 'Inter', sans-serif;
    background-color: var(--secondary);
    color: var(--text-primary);
    transition: var(--transition);
    position: relative;
    min-height: 100vh;
    padding-top: var(--navbar-height);
    overflow-x: hidden;
}

.main-container {
    min-height: calc(100vh - var(--navbar-height));
    background-color: var(--secondary); /* Maintain current background color */
    background-image: linear-gradient(to bottom, rgba(255,255,255,0.05), rgba(255,255,255,0.05)); /* Optional subtle gradient */
    padding: 0;
}

/* Navbar Styles */
.navbar {
    height: var(--navbar-height);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
}

.navbar-brand img {
    transition: var(--transition);
}

.navbar-brand img:hover {
    transform: scale(1.05);
}

/* Sidebar Styles */
.sidebar {
    background: white;
    box-shadow: 2px 0 15px rgba(0, 0, 0, 0.05);
    transition: var(--transition);
    padding-top: 20px;
    height: 100%;
    min-height: calc(100vh - var(--navbar-height) - 56px); /* Accounting for navbar and footer */
    position: sticky;
    top: var(--navbar-height);
    z-index: 1;
}

.sidebar .nav-link {
    border-radius: 8px;
    margin: 8px 16px;
    padding: 12px 16px;
    color: var(--text-secondary);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.sidebar .nav-link:before {
    content: '';
    position: absolute;
    left: -100%;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(108, 99, 255, 0.1), transparent);
    transition: var(--transition);
}

.sidebar .nav-link:hover:before {
    left: 0;
}

.sidebar .nav-link:hover,
.sidebar .nav-link.active {
    color: var(--primary);
    background-color: rgba(108, 99, 255, 0.1);
    transform: translateX(5px);
}

.sidebar .nav-link i {
    margin-right: 12px;
    transition: var(--transition);
}

.sidebar .nav-link:hover i {
    transform: scale(1.2);
}

/* Main Content Styles */
.main-content {
    animation: fadeIn 0.5s ease-out;
